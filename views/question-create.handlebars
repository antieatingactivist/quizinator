{{!-- Displayed when user is creating questions for a new quiz --}}

<div
  class="container flex grid grid-rows justify-evenly bg-gradient-to-r from-[#b2d1f7] via-[#66a5f2]/60 to-[#b2d1f7]  border-2 border-blue-500 rounded py-20 m-4 shadow-lg">

{{!-- New question form --}}
  <div id="question-block">
    <h1 class="text-4xl text-center font-bold mb-6 underline">Create Questions
    </h1>
    <div class="single-question grid grid-rows" id="single-question">

{{!-- Attaches quiz ID to new quiz questions --}}
      <input class="form-input" type="hidden" id="quiz-id" value={{quiz_id}}></input>

{{!-- Question content input --}}
      <label for="question_content" class="text-center text-xl font-semibold ">Question:</label>
      <input class="form-input mb-4 rounded" type="text" id="question-content"></input>

{{!-- Answer A input --}}
      <label for="answer-a" class="text-center text-md font-semibold">Answer A:</label>
      <input class="form-input mb-2 rounded" type="text" id="answer-a"></input>

{{!-- Answer B input --}}
      <label for="answer-b" class="text-center text-md font-semibold">Answer B:</label>
      <input class="form-input mb-2 rounded" type="text" id="answer-b"></input>

{{!-- Answer C input --}}
      <label for="answer-c" class="text-center text-md font-semibold">Answer C:</label>
      <input class="form-input mb-2 rounded" type="text" id="answer-c"></input>

{{!-- Answer D input --}}
      <label for="answer-d" class="text-center text-md font-semibold">Answer D:</label>
      <input class="form-input mb-4 rounded" type="text" id="answer-d"></input>

{{!-- Correct answer selection --}}
      <label for="answer_correct" class="text-center text-md font-semibold">Correct Answer:</label>
      <select id="answer-correct" class="text-center rounded mb-10">
        <option value="answer_a">A</option>
        <option value="answer_b">B</option>
        <option value="answer_c">C</option>
        <option value="answer_d">D</option>
      </select>

    </div>
  </div>

  <div class="grid grid-rows justify-items-center">

{{!-- "+" button to add additional questions --}}
    <button type="submit" id="add-question"
      class="bg-slate-200 hover:bg-slate-400 rounded-full mb-8 border-2 border-slate-500 shadow w-10 h-10 text-xl font-bold">+</button>

{{!-- Submit quiz button --}}
    <button type="submit" id="submit-btn"
      class="bg-lime-200 hover:bg-lime-400 rounded-full mb-8 border-2 border-lime-500 shadow px-4 py-2 text-xl font-semibold">Submit
      Quiz</button>

  </div>
</div>


<script src="/js/question-create.js"></script> 
