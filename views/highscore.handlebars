{{!-- Displayed when user clicks "High Scores" after taking quiz --}}

<div class="container flex grid grid-row justify-evenly bg-gradient-to-r from-[#b2d1f7] via-[#66a5f2]/60 to-[#b2d1f7]  border-2 border-blue-500 rounded py-20 m-4 shadow-lg">

{{!-- 'High Scores' and quiz title --}}
    <span class="text-4xl text-center font-bold mb-4 underline">High Scores</span>
    <br>
    <span class="text-center text-3xl">{{highscores.0.quiz.title}}</span>
    <hr class="my-8">

{{!-- Usernames and scores of each high score--}}
    {{#each highscores as |highscore|}}
    <div class="bg-slate-200/90 rounded mb-4 shadow">
        <p class="text-xl text-center font-semibold my-2">{{highscore.user.username}}</p>
        <p class="text-lg text-center mt-2 mb-4">Score: {{highscore.score}}/{{get_length highscore.quiz.questions}}</p>
    </div>
    {{/each}}

</div>