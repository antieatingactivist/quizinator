{{!-- Displayed when user clicks 'Login' button --}}

<div
  class="container flex justify-evenly bg-gradient-to-r from-[#b2d1f7] via-[#66a5f2]/80 to-[#b2d1f7]  border-2 border-blue-500 rounded py-20 m-4 shadow-lg">

  {{!-- Login form --}}
  <div class="w-full max-w-xs">
    <form class="px-8 pt-6 pb-8 mb-4">
      <h1 class="text-4xl text-center font-bold mb-6 underline">Login</h1>

      {{!-- Email input --}}
      <div class="mb-4">
        <label class="block text-center text-lg font-semibold mb-2" for="email">
          Email</label>
        <input class="rounded w-full py-2 px-3 text-gray-700" id="email-login" type="text" placeholder="Email">
      </div>

      {{!-- Password input --}}
      <div class="mb-6">
        <label class="block text-center text-lg font-semibold mb-2" for="password">Password</label>
        <input class="rounded w-full py-2 px-3 text-gray-700 mb-3" id="password-login" type="password"
          placeholder="********">
      </div>

      {{!-- Login button --}}
      <div class="flex items-center justify-between">
        <button class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded ml-20" type="button"
          id="login-btn">Login</button>

      </div>
    </form>
  </div>

  {{!-- Signup form --}}
  <div class="w-full max-w-xs">
    <form class="px-8 pt-6 pb-8 mb-4">
      <h1 class="text-4xl text-center font-bold mb-6 underline">Sign Up</h1>

      {{!-- Username input --}}
      <div class="mb-4">
        <label class="block text-center text-lg font-semibold mb-2" for="username-signup">Username</label>
        <input class=" rounded w-full py-2 px-3 text-gray-700" id="username-signup" type="text" placeholder="Username">
      </div>

      {{!-- Email input --}}
      <div class="mb-4">
        <label class="block text-center text-lg font-semibold mb-2" for="email-signup">Email</label>
        <input class=" rounded w-full py-2 px-3 text-gray-700" id="email-signup" type="text" placeholder="Email">
      </div>

      {{!-- Password input --}}
      <div class="mb-6">
        <label class="block text-center text-lg font-semibold mb-2" for="password-signup">Password</label>
        <input class="rounded w-full py-2 px-3 text-gray-700 mb-3" id="password-signup" type="password"
          placeholder="********">
      </div>

      {{!-- Signup button --}}
      <div class="flex items-center justify-between">
        <button class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded ml-20" type="button"
          id="signup-btn">
          Sign Up
        </button>
      </div>

    </form>
  </div>

  <script src="/js/login.js"></script>